{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.post.com/postCreate.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "url": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    }
  },
  "additionalProperties": false,
  "required": ["title", "url"]
}
